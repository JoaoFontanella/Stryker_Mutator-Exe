{
  "name": "unit-tests-jest",
  "version": "1.0.0",
  "description": "Example to unit tests using Jest",
  "main": "index.js",
  "author": "ugioni",
  "license": "ISC",
  "dependencies": {
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "clean": "rimraf ./coverage && mkdirp ./coverage",
    "test": "jest",
    "mutation": "stryker run",
    "coverage": "stryker run"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.spec.js"]
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.2.0",
    "@stryker-mutator/jest-runner": "^9.2.0",
    "jest": "^30.2.0"
  }
}
